<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/colorAccent"
            android:text="view自定义研究"
            android:onClick="goCustomView"
            android:gravity="center"
            android:background="@color/colorPrimary"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/colorAccent"
            android:text="侧滑删除列表"
            android:onClick="customDeleteListView"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/colorAccent"
            android:text="自定义progress"
            android:onClick="customProgress"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/colorAccent"
            android:text="波浪线"
            android:onClick="customWave"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/colorAccent"
            android:text="自定义区域悬浮区域view"
            android:onClick="customFloatingView"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>